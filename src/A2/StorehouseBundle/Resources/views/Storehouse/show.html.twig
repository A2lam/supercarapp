{% extends "A2StorehouseBundle::layout.html.twig" %}

{% block storehouse_content %}

    <h2>Détails de l'entrepôt</h2>

    <div>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                Nom
            </dt>
            <dd>
                {{ storehouse.name }}
            </dd>

            {% if storehouse.manager is not null %}
                <dt>
                    Manager
                </dt>
                <dd>
                    {{ storehouse.manager.name }}
                </dd>
            {% endif %}

            <dt>
                Adresse
            </dt>
            <dd>
                {{ storehouse.address.streetNb }} {{ storehouse.address.streetName }} <br />
                {% if storehouse.address.complement is not null %}
                    {{ storehouse.address.complement }} <br />
                {% endif %}
                {{ storehouse.address.zipCode }}, {{ storehouse.address.town }}, {{ storehouse.address.country }}
            </dd>

            <dt>
                Administateur d'ajout
            </dt>
            <dd>
                {{ nameAdminAdd }}
            </dd>

            <dt>
                Date d'ajout
            </dt>
            <dd>
                {{ storehouse.dateAdd|date("d/m/Y h:m:s") }}
            </dd>

            {% if storehouse.userUpdate is not null %}
                <dt>
                    Administateur de mise à jour
                </dt>
                <dd>
                    {{ nameUserUpdate }}
                </dd>

                <dt>
                    Date de mise à jour
                </dt>
                <dd>
                    {{ storehouse.dateUpdate|date("d/m/Y h:m:s") }}
                </dd>
            {% endif %}
        </dl>
    </div>
    <p>
        <a href="{{ path('a2_storehouse_index') }}">Retour à la liste</a> |
        <a href="{{ path('a2_storehouse_edit', { 'id': storehouse.id }) }}">Modifier</a>
    </p>

{% endblock storehouse_content %}