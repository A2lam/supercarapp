{% extends "A2CustomerBundle::layout.html.twig" %}

{% block customer_content %}

    <h2>Détails du client</h2>

    <div>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                Nom
            </dt>
            <dd>
                {{ customer.name }}
            </dd>

            <dt>
                Prénom
            </dt>
            <dd>
                {{ customer.lastname }}
            </dd>

            <dt>
                Date de naissance
            </dt>
            <dd>
                {{ customer.bday|date("d/m/Y h:m:s") }}
            </dd>

            <dt>
                Adresse
            </dt>
            <dd>
                {{ customer.address.streetNb }} {{ customer.address.streetName }} <br />
                {% if customer.address.complement is not null %}
                    {{ customer.address.complement }} <br />
                {% endif %}
                {{ customer.address.zipCode }}, {{ customer.address.town }}, {{ customer.address.country }}
            </dd>

            <dt>
                E-mail
            </dt>
            <dd>
                {{ customer.email }}
            </dd>

            <dt>
                Téléphone
            </dt>
            <dd>
                {{ customer.num }}
            </dd>

            <dt>
                Voitures achetés
            </dt>
            <dd>
                {% for car in customer.cars %}
                    - {{ car.model.name }} <br />
                {% endfor %}
            </dd>

            <dt>
                Administateur d'ajout
            </dt>
            <dd>
                {{ nameAdminAdd }}
            </dd>

            <dt>
                Date d'ajout
            </dt>
            <dd>
                {{ customer.dateAdd|date("d/m/Y h:m:s") }}
            </dd>

            {% if customer.userUpdate is not null %}
                <dt>
                    Administateur de mise à jour
                </dt>
                <dd>
                    {{ nameUserUpdate }}
                </dd>

                <dt>
                    Date de mise à jour
                </dt>
                <dd>
                    {{ customer.dateUpdate|date("d/m/Y h:m:s") }}
                </dd>
            {% endif %}
        </dl>
    </div>
    <p>
        <a href="{{ path('a2_customer_index') }}">Retour à la liste</a> |
        <a href="{{ path('a2_customer_edit', { 'id': customer.id }) }}">Modifier</a>
    </p>

{% endblock customer_content %}