{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Bday</th>
                <th>Email</th>
                <th>Num</th>
                <th>Adminadd</th>
                <th>Dateadd</th>
                <th>Userupdate</th>
                <th>Dateupdate</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{% if customer.bday %}{{ customer.bday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.num }}</td>
                <td>{{ customer.adminAdd }}</td>
                <td>{% if customer.dateAdd %}{{ customer.dateAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ customer.userUpdate }}</td>
                <td>{% if customer.dateUpdate %}{{ customer.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if customer.isActive %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_new') }}">Create a new customer</a>
        </li>
    </ul>
{% endblock %}
