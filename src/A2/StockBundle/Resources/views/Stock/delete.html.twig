{% extends "A2StockBundle::layout.html.twig" %}

{% block stock_content %}

    <h2>Suppression du stock</h2>

    <h3>Etes-vous sûr de vouloir supprimer ce stock ?</h3>

    <div>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                Catégorie
            </dt>
            <dd>
                {{ stock.category.name }}
            </dd>

            <dt>
                Marque
            </dt>
            <dd>
                {{ stock.model.brand.name }}
            </dd>

            <dt>
                Modèle
            </dt>
            <dd>
                {{ stock.model.name }}
            </dd>

            <dt>
                Quantité
            </dt>
            <dd>
                {{ stock.quantity }}
            </dd>

            <dt>
                Entrepôt
            </dt>
            <dd>
                {{ stock.storehouse.name }}
            </dd>

            {% if stock.userUpdate is not null %}
                <dt>
                    Dernière mise-à-jour
                </dt>
                <dd>
                    {{ stock.dateUpdate|date("d/m/Y h:m:s") }}
                </dd>
            {% endif %}

            <dt>
                Administateur d'ajout
            </dt>
            <dd>
                {{ nameAdminAdd }}
            </dd>

            <dt>
                Date d'ajout
            </dt>
            <dd>
                {{ stock.dateAdd|date("d/m/Y h:m:s") }}
            </dd>

            {% if stock.userUpdate is not null %}
                <dt>
                    Administateur de mise à jour
                </dt>
                <dd>
                    {{ nameUserUpdate }}
                </dd>

                <dt>
                    Date de mise à jour
                </dt>
                <dd>
                    {{ stock.dateUpdate|date("d/m/Y h:m:s") }}
                </dd>
            {% endif %}
        </dl>

        {{ form_start(delete_form) }}

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            <a href="{{ path('a2_stock_index') }}">Retour à la liste</a>
        </div>

        {{ form_end(delete_form) }}
    </div>

{% endblock stock_content %}