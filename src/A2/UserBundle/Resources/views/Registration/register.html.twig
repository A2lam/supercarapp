{% extends "CoreBundle::layout.html.twig" %}

{% block content %}

    <div class="well-block">
        <div class="well-title">
            <h3>Création d'un utilisateur</h3>
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {# Les erreurs général du formulaire #}
            {{ form_errors(form) }}

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.name, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                        {# Affichage des erreurs #}
                        {{ form_errors(form.name) }}
                        {# Génération de l'input. #}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.lastname, "Prénom", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.lastname) }}
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.bday, "Date de naissance", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.bday) }}
                        {{ form_widget(form.bday, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.num, "Numéro", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.num) }}
                        {{ form_widget(form.num, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        {{ form_label(form.address.streetNb, "N Rue", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.streetNb) }}
                        {{ form_widget(form.address.streetNb, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        {{ form_label(form.address.streetName, "Rue", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.streetName) }}
                        {{ form_widget(form.address.streetName, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.address.complement, "Complement", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.complement) }}
                        {{ form_widget(form.address.complement, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        {{ form_label(form.address.zipCode, "Code postal", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.zipCode) }}
                        {{ form_widget(form.address.zipCode, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.address.town, "Ville", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.town) }}
                        {{ form_widget(form.address.town, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        {{ form_label(form.address.country, "Pays", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.address.country) }}
                        {{ form_widget(form.address.country, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.email, "E-mail", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.plainPassword, "Mot de passe", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.plainPassword) }}
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        {{ form_label(form.image, "Photo de profil", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control input-md'}}) }}
                    </div>
                </div>
                <div class="col-md-12">
                    {# Pour le bouton, pas de label ni d'erreurs, on affiche juste le widget #}
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}