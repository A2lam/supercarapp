{% extends "A2UserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
        <div class="col-md-8">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form_horizontal">
                <fieldset>
                    <legend>Authentification</legend>

                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="form-group">
                        <label for="username" class="col-md-12 control-label">Nom d'utilisateur</label>
                        <div class="col-md-6">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control input-md" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="col-md-12 control-label">Mot de passe</label>
                        <div class="col-md-6">
                            <input type="password" id="password" name="_password" class="form-control input-md" required="required" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="remember_me" class="col-md-12 control-label checkbox"></label>
                        <div class="col-md-6">
                            <label class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on"/>Se souvenir de moi</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-primary"/>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}