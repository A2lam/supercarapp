{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Adminadd</th>
                <td>{{ nameAdminAdd }}</td>
            </tr>
            <tr>
                <th>Dateadd</th>
                <td>{% if category.dateAdd %}{{ category.dateAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Userupdate</th>
                <td>{{ category.userUpdate }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{% if category.dateUpdate %}{{ category.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if category.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('a2_category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('a2_category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}