{% extends "A2SupplierBundle::layout.html.twig" %}

{% block supplier_content %}

    <h2>Modification du fournisseur</h2>

    {{ form_start(edit_form) }}

    {{ form_errors(edit_form) }}
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            {{ form_label(edit_form.name, "Nom", {'label_attr': {'class': 'control-label col-md-2'}}) }}
            {{ form_errors(edit_form.name) }}
            <div class="col-md-4">
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'value': supplier.name }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.address, "Adresse", {'label_attr': {'class': 'control-label col-md-2'}}) }}
            {{ form_errors(edit_form.address.streetNb) }}
            <div class="col-md-3">
                {{ form_widget(edit_form.address.streetNb, {'attr': {'class': 'form-control', 'value': supplier.address.streetNb }}) }}
            </div>
            {{ form_errors(edit_form.address.streetName) }}
            <div class="col-md-7">
                {{ form_widget(edit_form.address.streetName, {'attr': {'class': 'form-control', 'value': supplier.address.streetName }}) }}
            </div>
            <div class="col-md-2"></div>
            {{ form_errors(edit_form.address.complement) }}
            <div class="col-md-10">
                {{ form_widget(edit_form.address.complement, {'attr': {'class': 'form-control', 'value': supplier.address.complement }}) }}
            </div>
            <div class="col-md-2"></div>
            {{ form_errors(edit_form.address.zipCode) }}
            <div class="col-md-3">
                {{ form_widget(edit_form.address.zipCode, {'attr': {'class': 'form-control', 'value': supplier.address.zipCode }}) }}
            </div>
            {{ form_errors(edit_form.address.town) }}
            <div class="col-md-4">
                {{ form_widget(edit_form.address.town, {'attr': {'class': 'form-control', 'value': supplier.address.town }}) }}
            </div>
            {{ form_errors(edit_form.address.country) }}
            <div class="col-md-3">
                {{ form_widget(edit_form.address.country, {'attr': {'class': 'form-control', 'value': supplier.address.country }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Valider" class="btn btn-default" />
            </div>
        </div>
    </div>

    <p><a href="{{ path('a2_supplier_index') }}">Retour Ã  la liste</a></p>

    {{ form_end(edit_form) }}

{% endblock supplier_content %}