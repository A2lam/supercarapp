{% extends "A2CurrencyBundle::layout.html.twig" %}

{% block currency_content %}

    <h2>Modification de la devise</h2>

    {{ form_start(edit_form) }}

    {{ form_errors(edit_form) }}
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            {{ form_label(edit_form.name, "Nom", {'label_attr': {'class': 'control-label col-md-2'}}) }}
            {{ form_errors(edit_form.name) }}
            <div class="col-md-4">
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'value': currency.name }}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.symbol, "Symbole", {'label_attr': {'class': 'control-label col-md-2'}}) }}
            {{ form_errors(edit_form.symbol) }}
            <div class="col-md-4">
                {{ form_widget(edit_form.symbol, {'attr': {'class': 'form-control', 'value': currency.symbol }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Valider" class="btn btn-default" />
            </div>
        </div>
    </div>

    <p><a href="{{ path('a2_currency_index') }}">Retour Ã  la liste</a></p>

    {{ form_end(edit_form) }}

{% endblock currency_content %}