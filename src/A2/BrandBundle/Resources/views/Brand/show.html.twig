{% extends 'base.html.twig' %}

{% block body %}
    <h1>Brand</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Adminadd</th>
                <td>{{ brand.adminAdd }}</td>
            </tr>
            <tr>
                <th>Dateadd</th>
                <td>{% if brand.dateAdd %}{{ brand.dateAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Userupdate</th>
                <td>{{ brand.userUpdate }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{% if brand.dateUpdate %}{{ brand.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if brand.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('brand_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('brand_edit', { 'id': brand.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
