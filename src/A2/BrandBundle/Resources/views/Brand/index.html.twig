{% extends "A2BrandBundle::layout.html.twig" %}

{% block brand_content %}

    <h2>Liste des Marques</h2>
    <p><a href="{{ path('a2_brand_new') }}">Créer une nouvelle marque</a></p>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <table align="right">
        <tr>
            <td>Rechercher une marque</td>
            <td>{{ form_widget(form.searchString, {'attr': {'class': 'form-control'}}) }}</td>
            <td><input type="submit" value="Rechercher" class="btn btn-default"></td>
        </tr>
    </table>
    {{ form_end(form) }}

    <table class="table">
        <tr>
            <th>
                Nom
            </th>
        </tr>

        {% for brand in brands %}
            <tr>
                <td>
                    {{ brand.name }}
                </td>
                <td>
                    <a href="{{ path('a2_brand_show', { 'id': brand.id }) }}">Détails</a> |
                    <a href="{{ path('a2_brand_edit', { 'id': brand.id }) }}">Modifier</a> |
                    <a href="{{ path('a2_brand_delete', { 'id': brand.id }) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock brand_content %}